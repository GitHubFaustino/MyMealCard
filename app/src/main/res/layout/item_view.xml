<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageIcon"
        android:layout_toStartOf="@+id/imgBalance"
        android:src="@drawable/euro_green"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição movimento"
        android:id="@+id/txtMovimento"
        android:layout_toEndOf="@+id/imageIcon"
        android:textStyle="bold"
        android:layout_alignTop="@+id/imageIcon"
        android:layout_toRightOf="@+id/imageIcon"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/2014"
        android:id="@+id/txtDate"
        android:layout_toEndOf="@+id/imageIcon"
        android:layout_below="@+id/txtMovimento"
        android:layout_toRightOf="@+id/imageIcon"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-200,00 €"
        android:id="@+id/txtAmount"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />


</RelativeLayout>